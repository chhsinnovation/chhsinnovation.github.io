{% macro backToTop(selector, text='Back to top') %}
  <a class="text-base" href="{{ selector }}">
    {{- text -}}
  </a>  
{% endmacro %}

{% macro shortPunchSummary(summary) %}
  <p class="text-2xl italic leading-snug">
    {{- summary -}}
  </p>
{% endmacro %}

{% macro mxImage(image, title, description) %}
  <img class="mx-blok my-12" src="{{ image | url }}" alt="{{- description -}}" title="{{ title }}">
{% endmacro %}

{% macro figureWithCaption(image, title, description, caption) %}
  <figure class="my-16 flex flex-col items-center border border-gray-500">
    <div class="p-2 border-b-4 border-gray-500 w-full flex flex-col items-center">
      <img src="{{ image | url }}" alt="{{- description -}}" title="{{ title }}">
    </div>
    <figcaption class="py-2 w-full text-center bg-gray-200 text-gray-600">
      {{- caption -}}
    </figcaption>
  </figure>
{% endmacro %}

{% macro executiveSummary(title, length, more, improvements, challenges, deliverables, outcomes) %}
  <section class="py-12">
    <h2>
        {{ title }}
    </h2>

    {% if length %}
      {{- length | markdownify | safe -}}
    {% endif %}

    {% if more %}
      {{- more | markdownify | safe -}}
    {% endif %}
    <div class="max-w-3xl xl:max-w-9xl flex mx-2 sm:mx-6 flex-col xl:flex-row border-4 border-gray-400">
      <div class="max-w-3xl xl:w-1/3 xl:max-w-lg xl:border-r xl:border-gray-400">
        {% if improvements %}
          <div class="mb-12">
            <h3>
              Improvements
            </h3>
            {{- improvements | markdownify | safe -}}
          </div>
        {% endif %}
        <div>
          <h3>
            Challenges
          </h3>
          {{- challenges | markdownify | safe -}}
        </div>
      </div>
      <div class="max-w-3xl xl:w-1/3 xl:max-w-lg xl:border-r xl:border-gray-400">
        <h3>
          Deliverables
        </h3>
        {{- deliverables | markdownify | safe -}}
      </div>
      <div class="max-w-3xl xl:w-1/3 xl:max-w-lg xl:border-r">
        <h3>
          Outcomes
        </h3>
        {{- outcomes | markdownify | safe -}}
      </div>
    </div>
  </section>
{% endmacro %}

{% macro boldBlock(block) %}
  <div class="text-3xl font-bold text-gray-800">
    {{- block | markdownify | safe -}}
  </div>
{% endmacro %}

{% macro blockquoteAttribution(quote, attribution) %}
  <blockquote>
    <p class="mb-2">
      {{- quote -}}
    </p>
    <footer class="text-gray-700 italic px-6 py-4">
      {{- attribution -}}
    </footer>
  </blockquote>
{% endmacro %}

{% macro contactCardGuest(person) %}
  <div class="flex items-center py-2 w-full sm:w-1/2">
    <div class="fill-current text-gray-700 w-20 h-20 mr-4 rounded border-2 border-gray-500 flex items-center justify-center">
      <svg width="48" height="48" viewBox="0 0 24 24"><path d="M0 0h24v24H0z" fill="none"/><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/></svg>
    </div>
    <div class="flex flex-col">
      <span class="text-lg leading-snug">
        {{ person.name }}
      </span>
      {% if person.role %}
        <span class="text-sm leading-snug">
          {{ person.role }}
        </span>
      {% endif %}
    </div>
  </div>
{% endmacro %}

{% macro contactCardMini(person) %}
  <div class="flex items-center py-2 w-full sm:w-1/2">
    <div class="fill-current text-gray-700 w-12 h-12 mr-4 rounded-full border-2 border-gray-500 flex items-center justify-center">
      <svg width="32" height="32" viewBox="0 0 24 24"><path d="M0 0h24v24H0z" fill="none"/><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/></svg>
    </div>
    <div class="flex flex-col">
      {% if person.url %}
        <a class="block text-lg leading-snug" href="{{ person.url }}">
          {{ person.name }}
        </a>
      {% else %}
        <span class="text-lg leading-snug">
          {{ person.name }}
        </span>
      {% endif %}
      {% if person.position %}
        <span class="text-sm leading-snug">
          {{ person.position }}
        </span>
      {% endif %}
    </div>
  </div>
{% endmacro %}